# Welcome to Jekyll!
#
# This config file is meant for settings that affect your whole blog, values
# which you are expected to set up once and rarely need to edit after that.
# For technical reasons, this file is *NOT* reloaded automatically when you use
# 'jekyll serve'. If you change this file, please restart the server process.

# Site settings
title: Things I Want My Kids to Know - A Father's Advice
email: fuzzygroup@gmail.com
description: > # this means to ignore newlines until "baseurl:"
  Scott Johnson writing things for his kids.
baseurl: "/blog" # the subpath of your site, e.g. /blog
#DNS related change
#url: "https://fuzzygroup.github.io" # the base hostname & protocol for your site
url: "http://fuzzyblog.io/tiwmktk"
twitter_username: fuzzygroup
github_username:  fuzzygroup

# Build settings
markdown: kramdown
gems:
- jekyll-sitemap
- jekyll-seo-tag

jekyll_plugins:

exclude:
 - 'log'
 - 'tmp'
 - '.asset-cache'
 - '.bundle'
 - 'Gemfile'
 - CNAME
